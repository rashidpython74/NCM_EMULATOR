# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8001
ENVIRONMENT=production

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=https://your-nms-domain.com,http://localhost:3000

# NMS Integration
NMS_INTEGRATION_ENABLED=true
NMS_BASE_URL=https://your-nms-domain.com
NMS_API_KEY=your-nms-api-key-here
NMS_AUTH_ENDPOINT=/api/auth

# SSH Settings
SSH_TIMEOUT=10
SSH_MAX_SESSIONS=100
SSH_SESSION_TIMEOUT=3600

# Database Settings (for audit logs)
DATABASE_URL=sqlite:///./audit.db
AUDIT_LOGS_ENABLED=true

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# UI Settings
UI_THEME=glass
LOGO_PATH=./static/monetx-logo.png
